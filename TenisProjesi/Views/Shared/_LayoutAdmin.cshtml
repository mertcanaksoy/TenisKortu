<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Paneli</title>

    <!-- BOOTSTRAP STYLES-->
    <link href="/Content/Admin/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="/Content/Admin/assets/css/font-awesome.css" rel="stylesheet" />
    <!--CUSTOM BASIC STYLES-->
    <link href="/Content/Admin/assets/css/basic.css" rel="stylesheet" />
    <!--CUSTOM MAIN STYLES-->
    <link href="/Content/Admin/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            @Html.Partial("_AdminPartial")
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="~/Manage/Index">
                            <div class="user-img-div">

                                <img src="/Content/Admin/assets/img/user.png" class="img-thumbnail" />

                                <div class="inner-text">
                                    Hoşgeldiniz, @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(User.Identity.Name)
                                    <br />
                                </div>
                            </div>
                        </a>

                    </li>

                    <li>
                        <a href="/Admin/AspNetRoles/Index"><i class="fa fa-users"></i>Rol Yönetimi</a>
                    </li>
                    <li>
                        <a href="/Admin/Saats/Index"><i class="fa fa-clock-o "></i>Anlık Kortlar</a>
                    </li>
                    <li>
                        <a href="~/Admin/Korts/Index"><i class="fa fa-tasks "></i>Kort Yönetimi</a>
                    </li>
                    <li>
                        <a href="~/Admin/Urunlers/Index"><i class="fa fa-shopping-cart "></i>Ürünler</a>
                    </li>
                    <li>
                        <a href="/Admin/Fatura/Index"><i class="fa fa-file "></i>Faturalar</a>
                    </li>

                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
                <!-- /. ROW  -->

            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <div id="footer-sec">
        &copy; 2018 TenisKortu | Designed by MEMBS
    </div>
    <!-- /. FOOTER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/Content/Admin/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/Content/Admin/assets/js/bootstrap.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/Content/Admin/assets/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/Content/Admin/assets/js/custom.js"></script>


</body>
</html>
