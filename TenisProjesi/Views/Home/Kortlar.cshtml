                                }
                                else if (ViewBag.saat1[i].enable == true)
                                {
                                    
                            <td>@Html.ActionLink((string)ViewBag.saat1[i].baslangicSaati, "Kirala", new { id = ViewBag.saat1[i].Id }) </td>
                                }
                                @if ((i + 1) != ViewBag.saat1.Length)
                                {
                                    if (ViewBag.saat1[i + 1].enable == false)
                                    {
                                <td><a class="disabled">@ViewBag.saat1[i + 1].baslangicSaati</a></td>

                                    }

                                    else if (ViewBag.saat1[i + 1].enable == true)
                                    {
                                <td>@Html.ActionLink((string)ViewBag.saat1[i + 1].baslangicSaati, "Kirala", new { id = ViewBag.saat1[i + 1].Id }) </td>
                                    }
