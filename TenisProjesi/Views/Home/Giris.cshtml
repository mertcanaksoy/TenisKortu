
@{
    ViewBag.Title = "Giris";
}

        <form class="form-signin" action="index.html">
            <div class="login-wrap">
                <input type="text" class="form-control" style="color:black" placeholder="Kullanıcı Adı" autofocus>
                <input type="password" class="form-control" style="color:black" placeholder="Şifre">
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Beni Hatırla
                    <span class="pull-right">
                        <a data-toggle="modal" href="#myModal"> Şifrenizi mi Unuttunuz?</a>
                    </span>
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">GİRİŞ</button>
                <p style="color:black">Sosyal Medya Hesabıyla Bağlan</p>
                <div class="login-social-link">
                    <a href="index.html" class="facebook">
                        <i class="icon-facebook"></i>
                        Facebook
                    </a>
                    <a href="index.html" class="twitter">
                        <i class="icon-twitter"></i>
                        Twitter
                    </a>
                </div>
                <div class="registration" style="color:black">
                    Henüz Üye Değil Misiniz?
                    <a class="" href="registration.html">
                        Bir Hesap Oluşturun
                    </a>
                </div>
            </div>
            <!-- Modal -->
            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" style="color:black">Şifrenizi mi Unuttunuz?</h4>
                        </div>
                        <div class="modal-body">
                            <p style="color:black">Şifrenizi Sıfırlamamız İçin Mail Adresinizi Girin</p>
                            <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix" style="color:black">
                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                            <button class="btn btn-success" type="button">Gönder</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- modal -->
        </form>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/Template/js/jquery.js"></script>
    <script src="/Content/Template/js/bootstrap.min.js"></script>




